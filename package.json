{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "new-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "bun@1.2.22",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "dotenv -- vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest --run",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"db:generate": "cross-env DB_MIGRATING=true drizzle-kit generate",
		"db:push": "cross-env DB_MIGRATING=true drizzle-kit push",
		"db:migrate": "cross-env DB_MIGRATING=true bun src/lib/server/database/migrate",
		"db:seed": "bun src/lib/server/database/seed.ts",
		"validate:email-verification": "bun scripts/validate-email-verification-config.ts",
		"email:test": "bun src/lib/auth/test-email.remote.ts",
		"email:diagnostics": "bun scripts/email-diagnostics.ts",
		"package:update": "bun update -i"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.563.1",
		"@playwright/test": "^1.58.0",
		"@sveltejs/enhanced-img": "^0.9.3",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^25.0.10",
		"@types/nodemailer": "^7.0.9",
		"@vitest/ui": "^4.0.18",
		"bits-ui": "^2.15.4",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsdoc": "^62.4.1",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.2.0",
		"jsdom": "^27.4.0",
		"lucide-svelte": "^0.563.0",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.58.0",
		"prettier": "~3.8.1",
		"prettier-plugin-css-order": "^2.2.0",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.48.3",
		"svelte-check": "^4.3.5",
		"svelte-moveable": "^0.45.0",
		"svelte-sonner": "^1.0.7",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18",
		"@faker-js/faker": "^10.2.0",
		"@fontsource-variable/montserrat": "^5.2.8",
		"@fontsource-variable/quicksand": "^5.2.10",
		"@sveltejs/adapter-node": "^5.5.2",
		"@types/pg": "^8.16.0",
		"better-auth": "^1.4.17",
		"clsx": "^2.1.1",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"drizzle-valibot": "^0.4.2",
		"html-to-image": "^1.11.13",
		"lz-string": "^1.5.0",
		"nodemailer": "^7.0.13",
		"pg": "^8.17.2",
		"phosphor-svelte": "^3.1.0",
		"resend": "^6.9.0",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss-animate": "^1.0.7",
		"tw-animate-css": "^1.4.0",
		"valibot": "^1.2.0"
	},
	"dependencies": {
		"@types/dompurify": "^3.2.0",
		"isomorphic-dompurify": "^2.35.0"
	}
}
