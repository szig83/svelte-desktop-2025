{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "new-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "bun@1.2.22",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest --run",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"db:generate": "cross-env DB_MIGRATING=true drizzle-kit generate",
		"db:push": "cross-env DB_MIGRATING=true drizzle-kit push",
		"db:migrate": "cross-env DB_MIGRATING=true bun src/lib/server/database/migrate",
		"db:seed": "bun src/database/seed.ts",
		"validate:email-verification": "bun scripts/validate-email-verification-config.ts",
		"email:test": "bun src/lib/auth/test-email.remote.ts",
		"email:diagnostics": "bun scripts/email-diagnostics.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.546.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.47.3",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.16",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.9.1",
		"@types/nodemailer": "^7.0.3",
		"@vitest/ui": "^4.0.4",
		"bits-ui": "^2.14.0",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsdoc": "^61.1.5",
		"eslint-plugin-svelte": "^3.12.5",
		"globals": "^16.4.0",
		"jsdom": "^27.0.1",
		"lucide-svelte": "^0.546.0",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.56.1",
		"prettier": "~3.6.2",
		"prettier-plugin-css-order": "^2.1.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.41.2",
		"svelte-check": "^4.3.3",
		"svelte-moveable": "^0.45.0",
		"svelte-sonner": "^1.0.5",
		"tailwindcss": "^4.1.16",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.12",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.4"
	},
	"dependencies": {
		"@faker-js/faker": "^10.1.0",
		"@types/pg": "^8.15.5",
		"better-auth": "^1.3.29",
		"clsx": "^2.1.1",
		"cross-env": "^10.1.0",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.6",
		"drizzle-valibot": "^0.4.2",
		"html-to-image": "^1.11.13",
		"lz-string": "^1.5.0",
		"nodemailer": "^7.0.10",
		"pg": "^8.16.3",
		"phosphor-svelte": "^3.0.1",
		"resend": "^6.2.2",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss-animate": "^1.0.7",
		"tw-animate-css": "^1.4.0",
		"valibot": "^1.1.0"
	}
}
